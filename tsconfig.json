{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@base/*": [ "./src/*" ]
    },
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "module": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "types": [
      "node"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  }
}
